<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokadexApp.PokemonPopupPage"
             BackgroundColor="{DynamicResource Theme}"
             Padding="20"
             Title="PokÃ©mon Details">

    <ScrollView HorizontalOptions="Center">
        <VerticalStackLayout Spacing="20"
                            
                           HorizontalOptions="Fill"
                           MaximumWidthRequest="500"
                             >

            
            <Frame CornerRadius="20"
                   Padding="15"
                   HasShadow="True"
                   BackgroundColor="{DynamicResource Accent1}"
                   
                HorizontalOptions="Fill"
             MaximumWidthRequest="500"
                   
                   >

                <Grid ColumnDefinitions="*,*"
                      RowDefinitions="Auto,Auto"
                      ColumnSpacing="15"
                      RowSpacing="15"
                      HorizontalOptions="Center">

                    
                    <VerticalStackLayout Grid.Row="0" Grid.Column="0" Spacing="5">
                        <Image x:Name="PokemonFront"
                               WidthRequest="170"
                               HeightRequest="170" />
                        <Label Text="Front"
                               TextColor="{DynamicResource Text}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    
                    <VerticalStackLayout Grid.Row="0" Grid.Column="1" Spacing="5">
                        <Image x:Name="PokemonBack"
                               WidthRequest="170"
                               HeightRequest="170" />
                        <Label Text="Back"
                               TextColor="{DynamicResource Text}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    
                    <VerticalStackLayout Grid.Row="1" Grid.Column="0" Spacing="5">
                        <Image x:Name="PokemonFrontS"
                               WidthRequest="170"
                               HeightRequest="170" />
                        <Label Text="Front (Shiny)"
                              TextColor="{DynamicResource Text}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                    
                    <VerticalStackLayout Grid.Row="1" Grid.Column="1" Spacing="5">
                        <Image x:Name="PokemonBackS"
                               WidthRequest="170"
                               HeightRequest="170" />
                        <Label Text="Back (Shiny)"
                               TextColor="{DynamicResource Text}"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>

                </Grid>
            </Frame>
            
            

            <Label x:Name="PokemonName"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="{DynamicResource Text}"
                   HorizontalOptions="Center"/>

            <Label x:Name="PokemonId"
                   FontSize="18"
                   TextColor="{DynamicResource Text}"
                   HorizontalOptions="Center"/>
            <Frame
                CornerRadius="15"
                   Padding="15"
                   HasShadow="True"
                   BackgroundColor="{DynamicResource Accent1}"
                   HorizontalOptions="Fill"
                  WidthRequest="200"
                  
                
                >
                <VerticalStackLayout
                x:Name="Types"
                Spacing="2"
                >
                </VerticalStackLayout>
            </Frame>

            <Frame CornerRadius="15"
                   Padding="15"
                   HasShadow="True"
                   BackgroundColor="{DynamicResource Accent1}"
                   HorizontalOptions="Fill"
                   MaximumWidthRequest="500"
                   >

                <VerticalStackLayout Spacing="8">
                    <Label x:Name="PokemonHeight"
                           TextColor="{DynamicResource Text}"
                           FontAttributes="Bold"
                           
                           />

                    <Label x:Name="PokemonWeight"
                           TextColor="{DynamicResource Text}"
                           FontAttributes="Bold"/>

                    <Label x:Name="PokemonBaseExp"
                          TextColor="{DynamicResource Text}"
                           FontAttributes="Bold"/>



                     
                    
                    
                </VerticalStackLayout>


                
            </Frame>

              
            
            
            <VerticalStackLayout
                Spacing="10">

                <Button Text="Close"
                    BackgroundColor="white"
                    TextColor="black"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    WidthRequest="120"
                    Clicked="ClosePopup"
                    HorizontalOptions="Center"/>

                <Button Text="Favourite"
                        x:Name="B"
                    BackgroundColor="white"
                    TextColor="black"
                    FontAttributes="Bold"
                    CornerRadius="12"
                    WidthRequest="120"
                    Clicked="SaveToFavourites"
                    HorizontalOptions="Center"/>
                    

 

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
