<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokadexApp.TeamsPage"
             Title=""
             
              BackgroundColor="{DynamicResource Theme}">

    <AbsoluteLayout>
        <Button
            Text="Add Team"
            BackgroundColor="{DynamicResource Accent1 }"
            TextColor="{DynamicResource Text}"
            Clicked="AddTeam"
            AbsoluteLayout.LayoutBounds="50,100,150,50"
            AbsoluteLayout.LayoutFlags="None"
            />

        <ScrollView x:Name="Scroll">

        
        <VerticalStackLayout Spacing="10" Padding="10,50,10,10">




            <VerticalStackLayout x:Name="PokemonListLayout"
                     Spacing="10">
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>


  </AbsoluteLayout>
</ContentPage>