<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokadexApp.TeamsPage"
             Title=""
             
              BackgroundColor="{DynamicResource Theme}">
    
    
    <!-- here at the top we have two buttons one is for reloading the page the other is for creating a new team -->
    
    <ScrollView>
        <VerticalStackLayout Spacing="10">
        <Button
            
            Text="Create new Team"
            BackgroundColor="{DynamicResource Accent1 }"
            TextColor="{DynamicResource Text}"
            Clicked="Create"
            
            />
            <Button
                
          Text="Reload"
         BackgroundColor="{DynamicResource Accent1 }"
            TextColor="{DynamicResource Text}"
           Clicked="Reload"
                
    
    />




            <VerticalStackLayout Spacing="10" Padding="10,50,10,10">




            <VerticalStackLayout x:Name="PokemonListLayout"
                     Spacing="10">
            </VerticalStackLayout>

        </VerticalStackLayout>
   


  </VerticalStackLayout>
    </ScrollView>
</ContentPage>