<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokadexApp.MainPage"
              BackgroundColor="{DynamicResource Theme}"
             Title=""
             >




    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="10,50,10,10">

            
            <Button
            Text="Reload Pokemon"
            Clicked="ReloadPokemon" 
                HorizontalOptions="Center"
                />
            
           
            <VerticalStackLayout x:Name="PokemonListLayout"
                             Spacing="10">
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>


</ContentPage>
