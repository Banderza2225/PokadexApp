<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokadexApp.TeamSelection"
             Title="TeamSelection"
             BackgroundColor="{DynamicResource Theme}"
             >


 <!--   this page simply views all created teams with a button to close page -->

    <ScrollView x:Name="Scroll">


        <VerticalStackLayout Spacing="10" Padding="10,50,10,10">

            <Button Text="Close"
                     x:Name="B"
                 BackgroundColor="{DynamicResource Accent1}"
                 TextColor="{DynamicResource Text}"
                 FontAttributes="Bold"
                 CornerRadius="12"
                 WidthRequest="120"
                 Clicked="ClosePage"
                 HorizontalOptions="Center"/>


            <VerticalStackLayout x:Name="PokemonListLayout"
                 Spacing="10">
            </VerticalStackLayout>

        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>