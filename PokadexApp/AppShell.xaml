<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PokadexApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PokadexApp"
    Title="PokadexApp">
    
    
    <TabBar>
        <ShellContent Title="Favourites" Route="main" ContentTemplate="{DataTemplate local:MainPage}" />
        <ShellContent Title="Pokedex" Route="pokedex" ContentTemplate="{DataTemplate local:PokedexPage}" />
        <ShellContent Title="Teams" Route="teams" ContentTemplate="{DataTemplate local:TeamsPage}" />
        <ShellContent Title="Settings" Route="settings" ContentTemplate="{DataTemplate local:SettingsPage}" />
    </TabBar>

</Shell>
