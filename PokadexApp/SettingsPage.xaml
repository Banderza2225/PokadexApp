<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokadexApp.SettingsPage"
             Title=""
             x:Name="settingsPage"
             BackgroundColor="{DynamicResource Theme}">
             
    <VerticalStackLayout
        
        Spacing="10">
        <Button
            x:Name="darkB"
            Text="Turn on Darkmode"
            Clicked="ApplyTheme"   
            TextColor="{DynamicResource Text}"
            BackgroundColor="{DynamicResource Accent1}"
            />
        <Button
            x:Name="History"
            Text="View History"
            Clicked="ViewHistory"   
            TextColor="{DynamicResource Text}"
            BackgroundColor="{DynamicResource Accent1}"
            />

        <Button
            x:Name="Clear"
            Text="Clear Favourite Pokemon"
            Clicked="ClearFavourites"   
            TextColor="{DynamicResource Text}"
            BackgroundColor="{DynamicResource Accent1}"
    />

    </VerticalStackLayout>
</ContentPage>